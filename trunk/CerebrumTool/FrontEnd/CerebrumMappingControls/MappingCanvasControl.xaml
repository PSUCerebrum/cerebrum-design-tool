<UserControl Name="MappingCanvas"
    x:Class="CerebrumMappingControls.MappingCanvasControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="300" BorderThickness="0">
    <Canvas Name="root">
        <Canvas Name="mapped" Margin="0,0,0,150" Background="BurlyWood" Height="150" Canvas.Left="0" Canvas.Top="0" Width="300" />
        <Canvas Name="unmapped" Margin="0,150,0,0" Background="DarkBlue" Height="150" Canvas.Left="0" Canvas.Top="0" Width="300" />
        <Canvas Name="drawingBoard" Margin="0,0,0,0" Opacity="1" Background="Transparent" Height="300" Canvas.Left="0" Canvas.Top="0" Width="300" />
    </Canvas>
</UserControl>
